citHeader("To cite the package 'mrdrc' in publications use:")

citEntry(entry="Article",
         title = "Model-robust concentration-response analysis",
         author = personList(as.person("C. Ritz"),
                             as.person("M J. Tarp-Johansen"),
                             as.person("T. Martinussen")),
         journal = "??",
         volume = 00,
         issue = 00,
         year = 2008,
         url = "??",

         textVersion =
         paste("Ritz, C., Tarp-Johansen, M. J. & Martinussen. T. (2008)",
               "Model-robust concentration-response analysis.",
               "Manuscript")
)
